@model IList<SolicitationViewModel>
<div class="modal fade" id="modal-solici" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Solicitações</h4>
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div>
                    <div id="" class="people-list">
                        <ul class="list-unstyled chat-list mt-2 mb-0">
                            @if (Model.Count() > 0)
                            {
                                @foreach (var receiveSolicitation in Model)
                                {
                                    <div style="width:50px; float:left;">
                                        <avatar-initials initials="@receiveSolicitation.Nome.Substring(0, 1)@receiveSolicitation.Sobrenome.Substring(0, 1)"
                                                         auto-color="true"
                                                         text-scale="1.2"
                                                         text-weight="300"
                                                         rounded
                                                         text-color="white"
                                                         size="45"
                                                         border="1">
                                        </avatar-initials>
                                    </div>
                                    <li class="clearfix">
                                        <div class="about">
                                            <div>@receiveSolicitation.Nome @receiveSolicitation.Sobrenome</div>
                                            <a href="#" class="btn btn-outline-info btn-sm form-control btn-aceitar" data-solicitation="@receiveSolicitation.ID">
                                                <div><i class="fa fa-plus" aria-hidden="true" type="submit"></i> Aceitar</div>
                                            </a>
                                            <a href="#" class="btn btn-outline-danger btn-sm form-control btn-recusar" data-solicitation="@receiveSolicitation.ID">
                                                <div><i class="fa fa-times" aria-hidden="true" type="submit"></i> Recusar</div>
                                            </a>
                                        </div>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="clearfix active">
                                    <div class="about">
                                        <div class="name">Nenha solitação pendente...</div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
