@model IList<UserViewModel>
<div class="modal fade" id="modal-solici" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Solicitações</h4>
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div>
                    <div id="" class="people-list">
                        <ul class="list-unstyled chat-list mt-2 mb-0">
                            @foreach (var receiveSolicitation in Model)
                            {
                                <li class="clearfix">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">
                                    <div class="about">
                                        <div class="recb">@receiveSolicitation.Nome @receiveSolicitation.Sobrenome</div>
                                        <a href="#" class="btn btn-outline-info btn-sm form-control btn-aceitar">
                                            <div><i class="fa fa-plus" aria-hidden="true" type="submit"></i> Aceitar</div>
                                        </a>
                                        <a href="#" class="btn btn-outline-danger btn-sm form-control btn-recusar">
                                            <div><i class="fa fa-times" aria-hidden="true" type="submit"></i> Recusar</div>
                                        </a>
                                    </div>
                                </li>
                                }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
