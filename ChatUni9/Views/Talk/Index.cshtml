@model IList<ChatUni9.Models.UserViewModel>
<div id="header-modal"> </div>
<div class="container">
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card chat-app">
                <div id="plist" class="people-list">
                    <div class="input-group">
                        <a href="#" class="btn btn-outline-info form-control" id="btn-add-contact">
                            <i class="fa fa-user" aria-hidden="true"> Adicionar</i>
                        </a>
                        <a href="#" class="btn btn-outline-info form-control" id="">
                            <i class="fa fa-user" aria-hidden="true"> Solicitações</i>
                        </a>
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-search"></i></span>
                        </div>
                        <input type="text" class="form-control" placeholder="Search...">
                    </div>
                    <ul class="list-unstyled chat-list mt-2 mb-0">
                        @if (Model.Count > 0)
                        {
                            foreach (var user in Model)
                            {
                                <li class="clearfix contact container" data-userid="@user.ID">
                                    <div style="width:50px; float:left">
                                        <avatar-initials initials="@user.Nome.Substring(0, 1)@user.Sobrenome.Substring(0, 1)"
                                                         auto-color="true"
                                                         text-scale="1.2"
                                                         text-weight="300"
                                                         rounded
                                                         text-color="white"
                                                         size="45"
                                                         border="1">
                                        </avatar-initials>
                                    </div>                                    
                                    <div class="about">
                                        <div class="name">@user.Nome</div>
                                        @if (ViewBag.OnlineUsers.Contains(user.ID.ToString()))
                                        {
                                            <div class="status"> <i class="fa fa-circle online"></i> online </div>
                                        }
                                        else
                                        {
                                            <div class="status"> <i class="fa fa-circle offline"></i> offline </div>
                                        }
                                    </div>
                                </li>

                            }
                        }
                        else
                        {
                            <li class="clearfix active">
                                <div class="about">
                                    <div class="name">Lista de contatos vazia</div>
                                    <div class="status">Adicione um conatato para iniciar uma conversa</div>
                                </div>
                            </li>

                        }

                        @*<li class="clearfix active contact" data-userid="26">
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="avatar">
                                <div class="about">
                                    <div class="name">Vincent Porter</div>
                                    <div class="status"> <i class="fa fa-circle offline"></i> left 7 mins ago </div>
                                </div>
                            </li>*@
                    </ul>
                </div>
                <div class="chat">
                    <div class="container">
                        <h3 class="text-center">Chat Uninove</h3>
                        <div class="name text-center">Desenvolvido por Xandre de Paula e Leonardo Amorim</div>
                        <div class="row marcador align-items-center">
                            <div class="col mx-auto text-center">
                                <img class="img-responsive" src="https://media-exp1.licdn.com/dms/image/C4D0BAQG9HkMW5p01WA/company-logo_200_200/0/1565275697333?e=1643846400&v=beta&t=da04X1wAiXqsva902-hF_xQ7Do5qAUhvPAGg8z0iT5g">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aspnet-signalr/1.1.4/signalr.min.js"></script>
    <script src="~/js/talk.js" asp-append-version="true"></script>
    <script src="~/js/contact.js" asp-append-version="true"></script>
    <script src="~/js/avatar-initials.js" asp-append-version="true"></script>
}